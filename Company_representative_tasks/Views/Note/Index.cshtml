@model IEnumerable<Argent_Company.Models.Note>

@{
    ViewData["Title"] = "جدول الملاحظات";
}

<h1>جدول الملاحظات</h1>

<p class="mb-4">
    <a asp-action="Create" class="btn btn-primary">إضافة ملاحظة جديدة</a>
</p>
<div class="table-responsive shadow-sm rounded">
<table class="table table-striped align-middle mb-0 bg-white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td class="text-end">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">تعديل</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info mx-1">تفاصيل</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">حذف</a>
            </td>
        </tr>
}
    </tbody>
 </table>
</div>

@section Styles {
    <style>
        .table th {
            background-color: #f8f9fa;
            font-weight: 600;
        }
        .table td {
            vertical-align: middle;
        }
    </style>
}